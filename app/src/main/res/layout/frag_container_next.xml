<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="合同配置及商务约定"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_underline_selector"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="配置要求"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/tv_container_next_allocation_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="标配"
                    android:background="@null"
                    android:drawableRight="@drawable/arrow_right_small"
                    android:textSize="14dp"
                    android:textColor="@color/text_color_content"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_underline_selector"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品总价"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="2.00"
                    android:background="@null"
                    android:textSize="14dp"
                    android:textColor="@color/text_color_content"
                    android:layout_marginRight="20dp"/>

            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_underline_selector"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="佣金方式"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/tv_container_next_commission_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="无"
                        android:textSize="14dp"
                        android:textColor="@color/text_color_content"
                        android:drawableRight="@drawable/arrow_right_small"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_underline_selector"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="质保期（月）"
                        android:textSize="14dp"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:hint="请填写质保期"
                        android:textSize="14dp"
                        android:textColorHint="@color/text_color_content"
                        android:background="@null"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@drawable/bg_white_underline_selector">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="保修公布价格"
                        android:textSize="14dp"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:textSize="14dp"
                        android:hint="请填写保修公布价格"
                        android:layout_marginRight="8dp"
                        android:textColor="@color/text_color_content"
                        android:textColorHint="@color/text_color_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@drawable/bg_white_underline_selector">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="运输方式"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/tv_container_next_shipping_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:textSize="14dp"
                        android:text="请选择运输方式"
                        android:layout_marginRight="8dp"
                        android:textColor="@color/text_color_content"
                        android:drawableRight="@drawable/arrow_right_small"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="培训要求"
                        android:textSize="14dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@null"
                        android:hint="请填写培训要求"
                        android:gravity="top|start"
                        android:layout_marginTop="8dp"
                        android:textSize="@dimen/text_size_normal"
                        android:inputType="textMultiLine"
                        android:textColor="@color/text_color_content"
                        android:textColorHint="@color/text_color_supplementary" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@drawable/bg_white_underline_selector">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="培训费预估"
                        android:textSize="14dp"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="14dp"
                        android:hint="请填写培训费预估"
                        android:layout_marginRight="8dp"
                        android:textColorHint="@color/text_color_content"
                        android:background="@null"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="装卸要求"
                        android:textSize="14dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@null"
                        android:hint="请填写装卸要求"
                        android:gravity="top|start"
                        android:layout_marginTop="8dp"
                        android:textSize="@dimen/text_size_normal"
                        android:inputType="textMultiLine"
                        android:textColor="@color/text_color_content"
                        android:textColorHint="@color/text_color_supplementary" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@drawable/bg_white_underline_selector">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="装卸费预估金额"
                        android:textSize="14dp"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="14dp"
                        android:hint="请填写装卸费预估金额"
                        android:layout_marginRight="8dp"
                        android:textColorHint="@color/text_color_content"
                        android:background="@null"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@drawable/bg_white_underline_selector">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="合同金额"
                        android:textSize="14dp"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="14dp"
                        android:hint="请填写合同金额"
                        android:layout_marginRight="8dp"
                        android:textColorHint="@color/text_color_content"
                        android:background="@null"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@drawable/bg_white_underline_selector">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="最终预估金额"
                        android:textSize="14dp"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="14dp"
                        android:hint="请填写最终预估金额"
                        android:layout_marginRight="8dp"
                        android:textColorHint="@color/text_color_content"
                        android:background="@null"/>
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_main_color_selector"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />

    </LinearLayout>
</ScrollView>
