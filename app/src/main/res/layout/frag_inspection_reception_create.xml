<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_white_small"
                android:minHeight="48dp"
                android:paddingLeft="16dp"
                android:paddingRight="8dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:singleLine="true"
                    android:text="单位名称"
                    android:textColor="@color/text_color_title"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/inspection_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:text="请选择客户名称"
                    android:drawableRight="@drawable/arrow_right_small"
                    android:textColor="@color/text_color_content"
                    android:textColorHint="@color/text_color_content"
                    android:textSize="@dimen/text_size_normal" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_underline_selector"
                android:minHeight="48dp"
                android:paddingLeft="16dp"
                android:paddingRight="8dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:singleLine="true"
                    android:text="来访者姓名"
                    android:textColor="@color/text_color_title"
                    android:textSize="@dimen/text_size_normal" />

                <EditText
                    android:id="@+id/et_inspection_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:layout_alignParentRight="true"
                    android:gravity="start|top"
                    android:hint="请填写来访者姓名"
                    android:drawableRight="@drawable/arrow_right_small"
                    android:textColor="@color/text_color_content"
                    android:textColorHint="@color/text_color_content"
                    android:textSize="@dimen/text_size_normal" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_underline_selector"
                android:minHeight="48dp"
                android:paddingLeft="16dp"
                android:paddingRight="8dp"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:singleLine="true"
                    android:text="来访者电话"
                    android:textColor="@color/text_color_title"
                    android:textSize="@dimen/text_size_normal" />

                <EditText
                    android:id="@+id/et_inspection_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:layout_alignParentRight="true"
                    android:gravity="start|top"
                    android:hint="请填写电话"
                    android:drawableRight="@drawable/arrow_right_small"
                    android:textColor="@color/text_color_content"
                    android:textColorHint="@color/text_color_content"
                    android:textSize="@dimen/text_size_normal" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_underline_selector"
                android:minHeight="48dp"
                android:paddingLeft="16dp"
                android:paddingRight="8dp"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:singleLine="true"
                    android:text="到访时间"
                    android:textColor="@color/text_color_title"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/inspection_visiting_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:layout_alignParentRight="true"
                    android:gravity="start|top"
                    android:hint="请选择到访时间"
                    android:drawableRight="@drawable/arrow_right_small"
                    android:textColor="@color/text_color_content"
                    android:textColorHint="@color/text_color_content"
                    android:textSize="@dimen/text_size_normal" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_underline_selector"
                android:minHeight="48dp"
                android:paddingLeft="16dp"
                android:paddingRight="8dp"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:singleLine="true"
                    android:text="结束时间"
                    android:textColor="@color/text_color_title"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/inspection_finish_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:layout_alignParentRight="true"
                    android:gravity="start|top"
                    android:hint="请选择结束时间"
                    android:drawableRight="@drawable/arrow_right_small"
                    android:textColor="@color/text_color_content"
                    android:textColorHint="@color/text_color_content"
                    android:textSize="@dimen/text_size_normal" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_underline_selector"
                android:minHeight="48dp"
                android:paddingLeft="16dp"
                android:paddingRight="8dp"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:singleLine="true"
                    android:text="来访人数"
                    android:textColor="@color/text_color_title"
                    android:textSize="@dimen/text_size_normal" />

                <EditText
                    android:id="@+id/et_inspection_peopleNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:layout_alignParentRight="true"
                    android:gravity="start|top"
                    android:hint="请填写来访人数"
                    android:drawableRight="@drawable/arrow_right_small"
                    android:textColor="@color/text_color_content"
                    android:textColorHint="@color/text_color_content"
                    android:textSize="@dimen/text_size_normal" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="附件信息"
                android:padding="16dp"
                android:textColor="@color/text_color_title"
                android:textSize="@dimen/text_size_normal"
                android:background="@drawable/bg_white_underline_selector"
                />


            <com.android.wandong.ui.widget.FixGridView
                android:id="@+id/photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_small"
                android:gravity="fill"
                android:horizontalSpacing="16dip"
                android:numColumns="4"
                android:padding="16dp"
                android:stretchMode="columnWidth"
                android:verticalSpacing="8dip" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_main_color_selector"
        android:gravity="center"
        android:minHeight="48dp"
        android:text="提交"
        android:textColor="@color/text_white_color_selector"
        android:textSize="@dimen/text_size_large" />

</LinearLayout>

