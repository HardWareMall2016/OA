<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/action_bar_icon_back_selector"
        android:gravity="center_vertical"
        android:textColor="@color/text_title_color_selector"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tab_card"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_left_rounded_selected_selector"
            android:gravity="center"
            android:minHeight="40dp"
            android:text="费用图表"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tab_details"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_right_rounded_unselected_selector"
            android:gravity="center"
            android:minHeight="40dp"
            android:text="费用明细"
            android:textColor="@color/text_color_content"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>


    <ImageView
        android:id="@+id/right_content"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        android:src="@drawable/icon_filter" />

</RelativeLayout>

