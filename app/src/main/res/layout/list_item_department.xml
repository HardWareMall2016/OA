<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/announcement_object_workRole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="10dp"
        android:background="@drawable/bg_white_small">
        <TextView
            android:id="@+id/tv_department_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   按工作岗位查看"
            android:drawableLeft="@drawable/icon_people"
            android:textColor="@color/text_color_title"
            android:textSize="@dimen/text_size_normal" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right_small"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</LinearLayout>