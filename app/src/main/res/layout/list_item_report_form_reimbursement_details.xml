<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_small"
    android:divider="?android:attr/listDivider"
    android:minHeight="@dimen/min_height"
    android:orientation="horizontal"
    android:showDividers="middle">

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/min_height"
        android:text="李发明"
        android:textColor="@color/text_color_content"
        android:textSize="14sp" />

    <com.android.wandong.ui.widget.CHScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="?android:attr/listDivider"
            android:minHeight="@dimen/min_height"
            android:orientation="horizontal"
            android:showDividers="middle">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:gravity="center"
                android:minHeight="@dimen/min_height"
                android:text="2016-09-23 12:34"
                android:textColor="@color/text_color_content"
                android:textSize="14sp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="@dimen/min_height"
                android:text="差旅费"
                android:textColor="@color/text_color_content"
                android:textSize="14sp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:gravity="center"
                android:minHeight="@dimen/min_height"
                android:text="2837283729329"
                android:textColor="@color/text_color_content"
                android:textSize="14sp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="@dimen/min_height"
                android:text="申请金额(元)"
                android:textColor="@color/text_color_content"
                android:textSize="14sp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:gravity="center"
                android:minHeight="@dimen/min_height"
                android:text="3651.00"
                android:textColor="@color/text_color_content"
                android:textSize="14sp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="@dimen/min_height"
                android:text="343434.00"
                android:textColor="@color/text_color_content"
                android:textSize="14sp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:gravity="center"
                android:minHeight="@dimen/min_height"
                android:text="已批准"
                android:textColor="#6FB349"
                android:textSize="14sp" />
        </LinearLayout>
    </com.android.wandong.ui.widget.CHScrollView>
</LinearLayout>