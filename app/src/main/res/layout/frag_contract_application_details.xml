<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_underline_selector"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/ApplyNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="申请单号"
                    android:textColor="@color/text_color_title"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/AccountName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/ApplyNo"
                    android:layout_below="@id/ApplyNo"
                    android:layout_marginTop="4dp"
                    android:singleLine="true"
                    android:text="客户名称"
                    android:textColor="@color/text_color_title"
                    android:textSize="@dimen/text_size_small" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignLeft="@id/AccountName"
                    android:layout_below="@id/AccountName"
                    android:layout_marginTop="4dp"
                    android:id="@+id/ll">

                    <TextView
                        android:id="@+id/create_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="创建时间"
                        android:textColor="@color/text_color_title"
                        android:textSize="14dp" />
                    <TextView
                        android:id="@+id/Status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="执行状态"
                        android:textColor="@color/text_color_title"
                        android:textSize="14dp"
                        android:layout_marginLeft="16dp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/ll"
                    android:layout_below="@id/ll"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/OwnerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_people"
                        android:drawablePadding="6dp"
                        android:text="名称"
                        android:textColor="@color/text_color_title"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:drawableLeft="@drawable/icon_money"
                        android:drawablePadding="6dp"
                        android:text="招待费"
                        android:textColor="@color/text_color_title"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:drawableLeft="@drawable/icon_time"
                        android:drawablePadding="6dp"
                        android:text="时间"
                        android:textColor="@color/text_color_title"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/icon_passed" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">
                <TextView
                     android:id="@+id/tv_base_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_small"
                    android:gravity="center"
                    android:minHeight="48dp"
                    android:text="基础信息"
                    android:textColor="@color/comm_red"
                    android:textSize="14dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tv_Business_agreement"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_small"
                    android:gravity="center"
                    android:minHeight="48dp"
                    android:text="配置及商务约定"
                    android:textColor="@color/text_color_content"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/tv_implement_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_small"
                    android:gravity="center"
                    android:minHeight="48dp"
                    android:text="执行信息"
                    android:textColor="@color/text_color_content"
                    android:textSize="14dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ll_1"
                android:visibility="visible">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/bg_white_small">
                    <TextView
                        android:id="@+id/tv_contract_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="合同名称:"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/bg_white_small">
                    <TextView
                        android:id="@+id/tv_unit_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="所属单元:"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/bg_white_small">
                    <TextView
                        android:id="@+id/tv_user_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="用户所在地:"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/bg_white_small">
                    <TextView
                        android:id="@+id/tv_task_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="任务归属人:"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tv_bonus_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="奖金归属人:"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/bg_white_small"
                    android:layout_marginTop="14dp">
                    <TextView
                        android:id="@+id/tv_buyer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="买方名称:"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/bg_white_small">
                    <TextView
                        android:id="@+id/customer_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="客户名称:"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/bg_white_small">
                    <TextView
                        android:id="@+id/tv_product_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="产品线:"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/bg_white_small">
                    <TextView
                        android:id="@+id/tv_product_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="产品型号:"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/bg_white_small">
                    <TextView
                        android:id="@+id/tv_ContracTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="合同总价:"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tv_Quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="销售数量:"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/bg_white_small">
                    <TextView
                        android:id="@+id/tv_Payment_agreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="付款约定:"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"/>
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/ll_2">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/bg_white_small">
                    <TextView
                        android:id="@+id/tv_Configuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="配置要求:"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tv_base_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="产品基价:"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/bg_white_small">
                    <TextView
                        android:id="@+id/tv_CommissionModeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="佣金方式:"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tv_CommissionEstimateAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="佣金预估金额:"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/bg_white_small">
                    <TextView
                        android:id="@+id/tv_Warranty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="质保期:"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tv_GuaranteePublishPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="保修公布价格:"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/bg_white_small">
                    <TextView
                        android:id="@+id/tv_TransportModeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="运输方式:"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/bg_white_small">
                    <TextView
                        android:id="@+id/tv_CapitalOccupyPrincipal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="资金占用本金:"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tv_AmortizedModeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="分期方式:"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/bg_white_small">
                    <TextView
                        android:id="@+id/tv_Interest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="资金占用计算:"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/bg_white_small">
                    <TextView
                        android:id="@+id/tva_ContracTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="合同金额:"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tv_FinalEstimateAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="最终预估金额:"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"/>
                </RelativeLayout>
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/ll_3">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/bg_white_small">
                    <TextView
                        android:id="@+id/Tv_ERP_ContractNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="合同编号:"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"/>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ApprovalInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FDF7E4"
                android:minHeight="40dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="审批信息"
                    android:textColor="#F0B831"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_yellow_down" />

            </RelativeLayout>

            <com.android.wandong.ui.widget.FixListView
                android:id="@+id/listViewApproval"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:dividerHeight="0dip"
                android:fadingEdge="none"
                android:fastScrollEnabled="false"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="false"
                android:smoothScrollbar="true"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@id/layoutLoading"
        layout="@layout/comm_lay_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <include
        android:id="@id/layoutLoadFailed"
        layout="@layout/comm_lay_loadfailed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <include
        android:id="@id/layoutEmpty"
        layout="@layout/comm_lay_emptyview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</RelativeLayout>
