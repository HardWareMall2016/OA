<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_underline_selector"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/ApplyNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="申请单号"
                    android:textColor="@color/text_color_title"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/AccountName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/ApplyNo"
                    android:layout_below="@id/ApplyNo"
                    android:layout_marginTop="4dp"
                    android:singleLine="true"
                    android:text="客户名称"
                    android:textColor="@color/text_color_title"
                    android:textSize="@dimen/text_size_small" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignLeft="@id/AccountName"
                    android:layout_below="@id/AccountName"
                    android:layout_marginTop="4dp"
                    android:id="@+id/ll">

                    <TextView
                        android:id="@+id/create_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="创建时间"
                        android:textColor="@color/text_color_title"
                        android:textSize="14dp" />
                    <TextView
                        android:id="@+id/Status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="执行状态"
                        android:textColor="@color/text_color_title"
                        android:textSize="14dp"
                        android:layout_marginLeft="16dp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/ll"
                    android:layout_below="@id/ll"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/OwnerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_people"
                        android:drawablePadding="6dp"
                        android:text="名称"
                        android:textColor="@color/text_color_title"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:drawableLeft="@drawable/icon_money"
                        android:drawablePadding="6dp"
                        android:text="招待费"
                        android:textColor="@color/text_color_title"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:drawableLeft="@drawable/icon_time"
                        android:drawablePadding="6dp"
                        android:text="时间"
                        android:textColor="@color/text_color_title"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/icon_passed" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_small"
                    android:gravity="center"
                    android:minHeight="48dp"
                    android:text="基础信息"
                    android:textColor="@color/comm_red"
                    android:textSize="14dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_small"
                    android:gravity="center"
                    android:minHeight="48dp"
                    android:text="配置及商务约定"
                    android:textColor="@color/text_color_content"
                    android:textSize="14dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_small"
                    android:gravity="center"
                    android:minHeight="48dp"
                    android:text="执行信息"
                    android:textColor="@color/text_color_content"
                    android:textSize="14dp" />
            </LinearLayout>




        </LinearLayout>
    </ScrollView>

    <include
        android:id="@id/layoutLoading"
        layout="@layout/comm_lay_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <include
        android:id="@id/layoutLoadFailed"
        layout="@layout/comm_lay_loadfailed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <include
        android:id="@id/layoutEmpty"
        layout="@layout/comm_lay_emptyview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</RelativeLayout>
