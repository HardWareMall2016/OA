<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_white_small"
                    android:minHeight="48dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/icon_sign_in_time"
                        android:drawablePadding="8dp"
                        android:singleLine="true"
                        android:text="签到时间"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal" />

                    <TextView
                        android:id="@+id/sign_out_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:text="2016-08-04 18:12"
                        android:textColor="@color/text_color_title"
                        android:textSize="@dimen/text_size_normal" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/address_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_underline_selector"
                    android:minHeight="48dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/icon_sign_in_address"
                        android:drawablePadding="8dp"
                        android:singleLine="true"
                        android:text="签出地址"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal" />

                    <TextView
                        android:id="@+id/sign_out_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawableRight="@drawable/icon_arrow_right"
                        android:singleLine="true"
                        android:text="请选择签到地址"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/customer_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_underline_selector"
                    android:minHeight="48dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

                    <TextView
                        android:id="@+id/customer_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/icon_sign_in_customer"
                        android:drawablePadding="8dp"
                        android:singleLine="true"
                        android:text="关联客户"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_normal" />

                    <TextView
                        android:id="@+id/customer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@id/customer_title"
                        android:gravity="end"
                        android:singleLine="true"
                        android:text="客户"
                        android:textColor="@color/text_color_title"
                        android:textSize="@dimen/text_size_normal" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:text="签到信息"
                    android:textColor="@color/text_color_content"
                    android:textSize="@dimen/text_size_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_white_small"
                        android:paddingBottom="4dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="4dp">

                        <ImageView
                            android:id="@+id/icon_sign_in_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_sign_location" />

                        <TextView
                            android:id="@+id/sign_in_time_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/icon_sign_in_location"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@id/icon_sign_in_location"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="签入时间"
                            android:textColor="@color/text_color_content"
                            android:textSize="@dimen/text_size_small" />


                        <TextView
                            android:id="@+id/sign_in_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/icon_sign_in_location"
                            android:layout_alignParentRight="true"
                            android:text="2016-08-05 14:43"
                            android:textColor="@color/text_color_title"
                            android:textSize="@dimen/text_size_small" />

                        <TextView
                            android:id="@+id/sign_in_address_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/sign_in_time_title"
                            android:layout_below="@id/sign_in_time_title"
                            android:layout_marginTop="4dp"
                            android:singleLine="true"
                            android:text="签入地址"
                            android:textColor="@color/text_color_content"
                            android:textSize="@dimen/text_size_small" />


                        <TextView
                            android:id="@+id/sign_in_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/sign_in_address_title"
                            android:layout_alignParentRight="true"
                            android:text="地址"
                            android:textColor="@color/text_color_title"
                            android:textSize="@dimen/text_size_small" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_white_small"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <EditText
                        android:id="@+id/remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:gravity="start|top"
                        android:hint="请填写备注内容"
                        android:maxLength="200"
                        android:minHeight="120dp"
                        android:textColor="@color/text_color_title"
                        android:textColorHint="@color/text_color_content"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/remark_length_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="0/200"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/btn_sign_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_main_color_selector"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="签出"
            android:textColor="@color/text_white_color_selector"
            android:textSize="@dimen/text_size_large" />

    </LinearLayout>

    <include
        android:id="@id/layoutLoading"
        layout="@layout/comm_lay_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <include
        android:id="@id/layoutLoadFailed"
        layout="@layout/comm_lay_loadfailed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <include
        android:id="@id/layoutEmpty"
        layout="@layout/comm_lay_emptyview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>