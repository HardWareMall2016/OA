<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<com.android.wandong.ui.widget.calendar.CalendarCard
        android:id="@+id/calendarCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />-->

    <com.android.wandong.ui.widget.calendar.CalendarCardPager
        android:id="@+id/calendarCardPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_main_color_selector"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="上一篇"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_sub_color1_selector"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="下一篇"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>
</RelativeLayout>
