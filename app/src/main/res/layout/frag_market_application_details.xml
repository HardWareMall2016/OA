<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_underline_selector"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/ApplyNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="申请单号"
                    android:textColor="@color/text_color_title"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/AccountName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/ApplyNo"
                    android:layout_below="@id/ApplyNo"
                    android:layout_marginTop="4dp"
                    android:singleLine="true"
                    android:text="客户名称"
                    android:textColor="@color/text_color_title"
                    android:textSize="@dimen/text_size_small" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/AccountName"
                    android:layout_below="@id/AccountName"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/OwnerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_people"
                        android:drawablePadding="6dp"
                        android:text="名称"
                        android:textColor="@color/text_color_title"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:drawableLeft="@drawable/icon_money"
                        android:drawablePadding="6dp"
                        android:text="招待费"
                        android:textColor="@color/text_color_title"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:drawableLeft="@drawable/icon_time"
                        android:drawablePadding="6dp"
                        android:text="时间"
                        android:textColor="@color/text_color_title"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/icon_passed" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_white_small"
                android:drawableLeft="@drawable/icon_data_2"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="客户情况"
                android:textColor="@color/text_color_content"
                android:textSize="@dimen/text_size_large" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minHeight="40dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="费用发生时间:"
                    android:textColor="@color/text_color_content"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/TreatTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="2016-07-26"
                    android:textColor="@color/text_color_title"
                    android:textSize="@dimen/text_size_normal" />

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_white_small"
                android:drawableLeft="@drawable/icon_remarks_info"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="备注信息"
                android:textColor="@color/text_color_content"
                android:textSize="@dimen/text_size_large" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="备注信息"
                android:background="@null"
                android:padding="16dp"
                android:textSize="@dimen/text_size_large" />

            <RelativeLayout
                android:id="@+id/ApprovalInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FDF7E4"
                android:minHeight="40dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="审批信息"
                    android:textColor="#F0B831"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_yellow_down" />

            </RelativeLayout>

            <com.android.wandong.ui.widget.FixListView
                android:id="@+id/listViewApproval"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:dividerHeight="0dip"
                android:fadingEdge="none"
                android:fastScrollEnabled="false"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="false"
                android:smoothScrollbar="true"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@id/layoutLoading"
        layout="@layout/comm_lay_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <include
        android:id="@id/layoutLoadFailed"
        layout="@layout/comm_lay_loadfailed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <include
        android:id="@id/layoutEmpty"
        layout="@layout/comm_lay_emptyview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</RelativeLayout>
