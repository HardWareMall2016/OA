<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#d9d9d9" />
            <!--  <stroke android:width="1dp" android:color="@color/bbutton_danger_edge" /> -->
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="6dp" android:topLeftRadius="0dp" android:topRightRadius="6dp" />
        </shape>
    </item>


    <item android:state_enabled="false">
        <shape>
            <solid android:color="#d9d9d9" />
            <!-- <stroke android:width="1dp" android:color="@color/bbutton_danger_disabled_edge" /> -->
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="6dp" android:topLeftRadius="0dp" android:topRightRadius="6dp" />
        </shape>
    </item>

    <item>
        <shape>
            <!--<solid android:color="@color/white" />-->
            <stroke android:width="1dp" android:color="@color/main_color" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="6dp" android:topLeftRadius="0dp" android:topRightRadius="6dp" />
        </shape>
    </item>


</selector>

